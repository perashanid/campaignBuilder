{
  "name": "campaign-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup": "node setup.js",
    "deploy:render": "node deploy-to-render.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "dev:frontend": "vite",
    "dev:backend": "cd server && npm run dev",
    "build": "tsc && vite build",
    "build:production": "tsc && vite build --mode production",
    "build:all": "npm run build && cd server && npm run build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "node test-runner.js",
    "test:url": "node test-runner.js",
    "test:unit": "node -e \"import('./src/services/__tests__/urlService.test.ts').then(m => m.runner.run())\"",
    "test:integration": "node -e \"import('./src/__tests__/urlSharing.integration.test.ts').then(m => m.runner.run())\""
  },
  "dependencies": {
    "framer-motion": "^12.23.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "typescript": "^5.9.2",
    "vite": "^5.0.0"
  }
}
